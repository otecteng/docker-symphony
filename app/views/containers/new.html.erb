<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">New Container</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
<%= form_for(@container) do |f| %>    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            
                                <div class="form-group">
                                    <label>Name</label>
                                    <%= f.text_field :name %>
                                </div>
                                <div class="form-group">
                                    <label>Images</label>
                                    <%= f.select :tag_id, Tag.all.collect { |p| [ p.to_s, p.id ] }%>
                                </div>

                                <div class="form-group">
                                    <label>command</label>
                                    <%= f.text_field :command %>
                                </div>
                                <div class="form-group">
                                    <label>env</label>
                                    <%= f.text_field :env %>
                                </div>
                                <div class="form-group">
                                    <label>link</label>
                                    <%= f.text_field :link %>
                                </div>
                                <div class="form-group">
                                    <label>Docker</label>
                                    <%= f.select :docker_id, Docker.all.collect { |p| [ p.name, p.id ] }%>
                                </div>

                                <button type="submit" class="btn btn-default">Submit Button</button>
                                <button type="reset" class="btn btn-default">Reset Button</button>
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>


<% end %>

