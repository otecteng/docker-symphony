<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Containers</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
    
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
<%= link_to 'New Container', new_container_path,:class=>"btn btn-default btn-new" %>                          
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Repo</th>
                                            <th>Tag</th>
                                            <th>Running</th>
                                            <th>Oper</th><th>Oper</th>
                                            <th>Oper</th><th>Oper</th><th>Oper</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                      <% @containers.each do |container| %>
                                        <tr class="odd gradeX">
        <td><%= container.tag %></td>
        <td><%= container.name %></td>
        <td><%= container.ports %></td>
        <td><%= container.running? %></td>
        
        <td><%= container.docker.name if container.docker %></td>
        <td><%= container.created_at %></td>
        <td><%= link_to 'Show', container %></td>
        <td><%= link_to 'Edit', edit_container_path(container) %></td>
        <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                                        </tr>
                                      <%end%>

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->

                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
    </div>

</div>
<script type="text/javascript">
  $('.btn-sync').click(function() {
    $.post('/tags/sync',function(data){
      location.reload(false);
    });
  })
</script>

