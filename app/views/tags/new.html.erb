<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">New Image</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
<%= form_for(@tag) do |f| %>    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Basic Form Elements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">                            
                            <div class="form-group">
                                <label>Name</label>
                                <%= f.text_field :name %>
                            </div>
                                <div class="form-group">
                                    <label>From</label>
                                    <%= select_tag "from", options_from_collection_for_select(Tag.all,"id","to_s")%>
                                </div>

                                <div class="form-group">
                                    <label>Dockerfile</label>
                                    <%= text_area_tag "docker_file" %>
                                </div>

                                <button type="submit" class="btn btn-default">Submit Button</button>
                                <button type="reset" class="btn btn-default">Reset Button</button>
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>


<% end %>

